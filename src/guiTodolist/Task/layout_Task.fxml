<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="649.0" prefWidth="806.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guiTodolist.Task.ControllerTask">
   <children>
      <HBox alignment="CENTER" layoutX="130.0" layoutY="38.0" prefHeight="40.0" prefWidth="218.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="30.0">
         <children>
            <TextField promptText="Task Überschrift" />
         </children>
      </HBox>
      <VBox alignment="CENTER" layoutX="55.0" layoutY="80.0" spacing="10.0" styleClass="vBox" AnchorPane.leftAnchor="45.0">
         <children>
            <Label text="Beschreibung:" />
            <TextArea fx:id="textAreaDescription" prefHeight="93.0" prefWidth="340.0" promptText="Allgemeine Beschreibung der Aufgabe" styleClass="textarea" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" layoutX="45.0" layoutY="232.0" prefHeight="61.0" prefWidth="350.0" spacing="10.0" styleClass="vBox" AnchorPane.leftAnchor="45.0">
         <children>
            <Label text="Fälligkeitsdatum:" />
            <DatePicker fx:id="datePickerDueDate" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
      <Button fx:id="buttonCreateTask" layoutX="60.0" layoutY="326.0" mnemonicParsing="false" onAction="#createTask" text="Aufgabe erstellen" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="60.0" />
      <VBox alignment="CENTER" layoutX="436.0" layoutY="80.0" spacing="10.0" styleClass="vBox" AnchorPane.rightAnchor="45.0">
         <children>
            <Label text="Checklist:" />
            <ListView fx:id="listViewChecklist" prefHeight="142.0" prefWidth="318.0" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#deleteEntryToChecklist" text=" - " />
                  <Separator orientation="VERTICAL" prefHeight="10.0" />
                  <Button mnemonicParsing="false" onAction="#addEntryToChecklist" text="+" />
                  <TextField fx:id="textFieldChecklistNewEntry" prefHeight="27.0" prefWidth="196.0" promptText="Neuer Eintrag der Checkliste" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" layoutX="45.0" layoutY="353.0" prefHeight="197.0" prefWidth="350.0" spacing="10.0" styleClass="vBox">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Anmerkungen:" />
            <TextArea fx:id="textAreaNotes" prefHeight="200.0" prefWidth="200.0" promptText="Allgemeine Notizen / Anmerkungen zu der Aufgabe" styleClass="textarea" />
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="433.0" layoutY="353.0" prefHeight="197.0" prefWidth="328.0" spacing="10.0" styleClass="vBox">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Dateianhänge:" />
            <ListView fx:id="listViewFileAttachment" prefHeight="200.0" prefWidth="200.0" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" text=" - " />
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <Button mnemonicParsing="false" text="+" />
                  <TextField fx:id="textFieldNewFileEntry" promptText="Dokumentenbezeichnung" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../style_ToDoList.css" />
      <URL value="@style_Task.css" />
   </stylesheets>
</AnchorPane>
